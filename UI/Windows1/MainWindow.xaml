<Window x:Class="GosAutoInspection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GosAutoInspection"
        mc:Ignorable="d"
        Title="Госавто Инспекция" Height="800" Width="1200" MinHeight="800" MinWidth="1300" WindowStartupLocation="CenterScreen"  Icon="/UI/SystemPictures/gibdd_logo.png">
    <Grid Background="{StaticResource BasicBackground2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <TextBlock FontSize="35" HorizontalAlignment="Center" Margin="15" Foreground="Black">
                <Bold>"Госавто инспекция"</Bold>
        </TextBlock>
        <Image Source="/UI/SystemPictures/gibdd_logo.png" HorizontalAlignment="Left" Stretch="Uniform" Margin="5"/>

        <Frame x:Name="MainFrame1" NavigationUIVisibility="Hidden" Grid.Row="1" 
                   Background="{StaticResource BasicBackground}" ContentRendered="MainFrame1_ContentRendered"/>
    </Grid>
</Window>
